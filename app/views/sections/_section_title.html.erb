<span class="title-text"><%= "Sección #{i} - #{section.title}" %></span>
<% if current_user.is_admin? %>
  <%= link_to edit_subject_resource_section_path(section.resource.subject, section.resource, section, index: i), remote: true do %>
    <span class="glyphicon glyphicon-pencil action action-edit"></span>
  <% end %>
  <%= link_to subject_resource_section_path(section.resource.subject, section.resource, section), remote: true, data: { confirm: "Are you sure you want to delete this?" }, method: :delete do %>
    <span class="glyphicon glyphicon-remove action action-remove"></span>
  <% end %>

  <div class="pull-right">
    <%= link_to new_subject_resource_section_lesson_path(section.resource.subject, section.resource, section), class: "btn btn-primary btn-xs" do %>
      <span class="glyphicon glyphicon-plus"></span> Nueva Lección
    <% end %>
  </div>
<% end %>
