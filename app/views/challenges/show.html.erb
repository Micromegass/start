<div class="container expand challenge-page">
  <div class="row expand">
    <div class="col-md-5 expand overflow instructions">
      <%= link_to "<span class='glyphicon glyphicon-arrow-left'></span> Volver a #{@challenge.course.name}".html_safe, @challenge.course %>
      <h1><%= @challenge.name %></h1>

      <%= markdown @challenge.instructions %>
    </div>

    <div class="col-md-7 expand solution">
      <%= form_tag submit_solution_path(@solution.id), id: 'submit-solution', class: 'expand', remote: true do %>
        
        <!-- file tabs -->
        <ul class="nav nav-tabs" role="tablist">
          <% @solution.documents.each_with_index do |document, index| %>
            <li class='<%= "active" if index == 0 %> file-tab'>
              <a href="#file-<%= document.id %>" role="tab" data-toggle="tab"><span class="name"><%= document.name %></span></a>
            </li>
          <% end %>
        </ul>

        <!-- file content -->
        <div class="tab-content expand editors" data-solution-id="<%= @solution.id %>">
          <% @solution.documents.each_with_index do |document, index| %>
            <div class="tab-pane expand <%= "active" if index == 0 %> instructions" id="editor-<%= document.id %>">
              <%= text_area_tag "content-#{document.id}", document.content, class: "editor-content", data: { id: "#{document.id}"} %>

              <script>
                var id = '<%= document.id %>';
                var editor = editors.configure({
                  el: 'content-' + id,
                  value: $('#content-' + id).val(),
                  opts: { mode: '<%= codemirror_mode(document.name) %>' }
                });
                editors.add(id, editor);
                editor.on("change", function() { Dispatcher.trigger("editors:change"); });
              </script>
            </div>
          <% end %>
        </div>

        <!-- preview and submit button -->
        <div class="solution-buttons">
          <div class="text-right">
            <a href="#" class="btn btn-default btn-preview" target="_blank">Preview</a>
            <%= submit_tag "Evaluar Solución", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Modal to zoom images -->
<div id="zoom-modal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body"></div>
    </div>
  </div>
</div>

<script type="x/template" id="solution-eval-template">
  <div class="solution-eval">
    <div class="glyphicon glyphicon-cloud"></div>
    Estamos evaluando tu solución
    <span>Por favor espera unos segundos (o minutos)</span>
  </div>
</script>

<script type="x/template" id="notification-template">
  <div class="modal notification-modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title">{{= title }}</h4>
        </div>
        <div class="modal-body">
          <p class="text-center icon" style="color: {{= color }}"><span class="glyphicon glyphicon-{{= icon }}" aria-hidden="true"></span></p>
          <p class="text-center">{{= message }}</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
        </div>
      </div>
    </div>
  </div>
</script>

<script>
  (function() {
    var instructionsView = new InstructionsView();
    var solutionView = new SolutionView();

    $(document).on("page:before-change", function() {
      instructionsView.remove();
      solutionView.remove();
    });
  })();
</script>