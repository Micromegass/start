<div id="question-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Pregunta</h4>
      </div>

      <div class="alerts-container">
      </div>

      <%= form_for question_form, as: :question, url: question_form_path(question_form),
        remote: true, method: (question_form.question.new_record? ? :post : :patch) do |f| %>

        <div class="modal-body">
          <div class="form-group">
            <%= f.check_box :published %>
            <%= f.label :published, "Publicado" %>
          </div>
          <div class="form-group">
            <%= f.label :text, "Pregunta" %>
            <%= f.text_field :text, class: "form-control" %>
          </div>
          <%= f.label "Respuestas correctas" %>
          <% question_form.correct_answers.each do |correct_answer| %>
            <div class="form-group">
              <%= f.text_area :correct_answers, multiple: true, class: "form-control", value: correct_answer %>
            </div>
          <% end %>
          <%= f.label "Respuestas incorrectas" %>
          <% question_form.wrong_answers.each do |wrong_answer| %>
            <div class="form-group">
              <%= f.text_area :wrong_answers, multiple: true, class: "form-control", value: wrong_answer %>
            </div>
          <% end %>
        <div class="modal-footer">
          <%= f.button "Guardar", class: 'btn btn-primary'  %>
        </div>
      <% end %>
    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div>
