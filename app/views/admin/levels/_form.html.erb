<div class="container resource-form-page">
  <div class="row">
    <%= form_for [:admin, @level] do |f| %>
      <div class="col-sm-10 col-sm-offset-1">
        <%= render 'shared/flash_messages_form', object: @level  %>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>


        <div class="form-group">
          <%= f.label :image_url %>
          <%= f.text_field :image_url, class: "form-control" %>
        </div>


        <!-- markdown form -->
        <div class="giving-method-points giving-method">
          <div class="form-group">
            <%= f.label :required_points %>
            <%= f.number_field :required_points, class: "form-control" %>
          </div>
        </div>

        <div class="actions text-right">
          <%= link_to "Cancelar", admin_levels_path , class: "btn btn-default" %>
          <%= f.submit @level.new_record? ? "Crear nivel" : "Actualizar nivel", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
