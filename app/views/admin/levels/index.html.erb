<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Niveles</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <%= link_to "Nuevo Nivel", new_admin_level_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <table class="table badges" id="table-badges">
        <thead>
          <tr>
            <th>Imagen</th>
            <th>Nivel</th>
            <th class="text-center">Puntos requeridos</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @levels.each do |level| %>
          <tr id="level-<%= level.id %>">
            <td><%= image_tag( level.image_url, class: "img-circle" ) %></td>
            <td><%= level.name %></td>
            <td><%= level.required_points %></td>
            <td>
              <%= link_to '<span class="glyphicon glyphicon-pencil action action-edit"></span>'.html_safe, edit_admin_level_path(level)  %>
              <%= link_to '<span class="glyphicon glyphicon-remove action action-remove"></span>'.html_safe, admin_level_path(level), data: { confirm: "Are you sure you want to delete this" }, method: :delete %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
