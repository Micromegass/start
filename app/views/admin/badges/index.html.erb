<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Insignias</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <%= link_to "Nueva insignia", new_admin_badge_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <table class="table badges" id="table-badges">
        <thead>
          <tr>
            <th>Imagen</th>
            <th>Insignia</th>
            <th class="text-center">descripci√≥n</th>
            <th class="text-center">Puntos requeridos</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @badges.each do |badge| %>
          <tr id="badge-<%= badge.id %>">
            <td><%= image_tag( badge.image_url, class: "img-circle" ) %></td>
            <td><%= badge.name %></td>
            <td><%= badge.description %></td>
            <td><%= badge.required_points %></td>
            <td>
              <%= link_to '<span class="glyphicon glyphicon-pencil action action-edit"></span>'.html_safe, edit_admin_badge_path(badge)  %>
              <%= link_to '<span class="glyphicon glyphicon-remove action action-remove"></span>'.html_safe, admin_badge_path(badge), remote: true, data: { confirm: "Are you sure you want to delete this" }, method: :delete %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
