<% if @user.valid? %>
  $("#user-modal").modal('hide');
  $("#user-<%= @user.id %>").replaceWith('<%= j render @user %>');
  $(".navbar").after('<div class="alert alert-success alert-dismissible" role="alert"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button> El usuario fue actualizado con Ã©xito!</div>');
  setTimeout(function() {
    $('.alert-success').slideUp('slow', function() {
      $(this).remove();
    })
  }, 2000);
<% else %>
  $("#user-modal .alerts-container")
    .html('<%= j render "shared/flash_messages_form", object: @user %>');
<% end %>
