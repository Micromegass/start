<% if @user.valid? %>
  $("#user-modal .alerts-container")
    .html('<%= j render "shared/alert", msg: "Se a enviado un correo de bienvenida al correo #{@user.email}", type: "notice" %>');
  $('#user-modal input').val('');
<% else %>
  $("#user-modal .alerts-container")
    .html('<%= j render "shared/flash_messages_form", object: @user %>');
<% end %>
