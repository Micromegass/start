        <h1>Nuevo Usuario</h1>
        <div class="form-group">
          <%= f.label :first_name, "Nombres y apellidos" %>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email, "Correo electrÃ³nico" %>
