<div id="badge-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Asignar Insignia</h4>
      </div>

      <div class="alert" style="display:none" role="alert">
      </div>
      <% if @unassigned_badges.empty? %>
        <div class="alert alert-danger">
          No se le puede asignar manualmente m√°s insignias a este usuario
        </div>
      <% else %>
        <%= form_for [:admin, @badge_ownership], remote: true do |f| %>
          <div class="modal-body">
            <div class="form-group">
              <%= f.label :badge_id, "Insignia" %>
              <%= f.collection_select :badge_id, @unassigned_badges, :id, :name, {}, { class: 'form-control input-lg' } %>
            </div>
          </div>
          <div class="modal-footer">
            <%= f.hidden_field :user_id %>
            <%= f.submit("Asignar", class: 'btn btn-primary') %>
          </div>
        <% end %>
      <% end %>
    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div>
