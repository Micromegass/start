<div id="change-password-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Cambiar Contrase単a</h4>
      </div>

      <div class="alert" style="display:none" role="alert">
      </div>

      <%= form_tag url_for(controller: :passwords, action: :update), method: 'PATCH', remote: true do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <%= label_tag(:password, "Nueva Contrase単a") %>
            <%= password_field_tag(:password, nil, class: 'form-control') %>
          </div>
          <div class="form-group">
            <%= label_tag(:password_confirmation, "Confirma Contrase単a") %>
            <%= password_field_tag(:password_confirmation, nil, class: 'form-control') %>
          </div>
        </div>
        <div class="modal-footer">
          <%= submit_tag("Cambiar Contrase単a", class: 'btn btn-primary') %>
        </div>
      <% end %>
    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div>
