<div id="change-password-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Cambiar Contrase単a</h4>
      </div>

      <div class="alerts-container">
      </div>

      <%= form_for :password_change, url: password_path, method: :patch, remote: true do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label(:password, "Nueva Contrase単a") %>
            <%= f.password_field(:password, class: 'form-control input-lg') %>
          </div>
          <div class="form-group">
            <%= f.label(:password_confirmation, "Confirma Contrase単a") %>
            <%= f.password_field(:password_confirmation, class: 'form-control input-lg') %>
          </div>
        </div>
        <div class="modal-footer">
          <%= submit_tag("Cambiar Contrase単a", class: 'btn btn-primary') %>
        </div>
      <% end %>
    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
