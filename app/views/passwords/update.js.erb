<% if @password_change.valid? %>
  $('#change-password-modal input[type=password]').val('');
  $('#change-password-modal').modal('hide');
  $('.main-alerts-container').prepend(
    '<%= j render "shared/alert", msg: "La contraseña ha sido cambiada con éxito", type: "notice" %>'
  );
<% else %>
  $('#change-password-modal .alerts-container').html(
    '<%= j render "shared/flash_messages_form", object: @password_change %>'
  );
<% end %>
