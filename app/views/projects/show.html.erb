<div class="container-fluid">
  <div class="row">
    <% unless @project.explanation_video_url.blank? %>
      <div class="col-xs-12 col-md-6 expand">
        <%= link_to course_path(@project.course), class: "btn btn-link" do %>
          <span class='glyphicon glyphicon-arrow-left'></span>
          <span class='hidden-xs'>Volver a <strong><%= @project.course.name %></strong></span>
        <% end %>

        <div class="video-wrapper">
          <%= embedded_video(@project.explanation_video_url) %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-12 col-md-<%= @project.explanation_video_url.blank? ? "6" : "3" %> expand">
      <h2><%= @project.name %></h2>
      <div class="project-explanation">
        <%= markdown @project.explanation_text %>
      </div>
    </div>
    <div class="col-xs-12 col-md-<%= @project.explanation_video_url.blank? ? "6" : "3" %> expand">
      <%= render "comments/embedded", commentable: @project %>
    </div>
  </div>
</div>
