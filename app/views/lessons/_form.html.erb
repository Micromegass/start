<div class="container resource-form-page">
  <div class="row">
    <%= form_for [@section.resource.subject, @section.resource, @section, @lesson] do |f| %>
      <div class="col-sm-10 col-sm-offset-1">
        <%= render 'shared/flash_messages_form', object: @lesson  %>

        <h1><%= @lesson.new_record? ? "Nuevo Lección" : "Editar Lección" %></h1>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :video_url %>
          <%= f.text_field :video_url, class: "form-control" %>
          <p class="help-block">Debe poner el video embebido ej. http://fast.wistia.net/embed/iframe/es7g1ii56j</p>
        </div>

        <div class="form-group">
          <%= f.label :video_duration %>
          <%= f.text_field :video_duration, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, rows: 2, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :info %>
          <%= f.text_area :info, rows: 2, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :section %>
          <%= f.collection_select(:section_id, @section.resource.sections, :id, :title, {},{class: "form-control"}) %>
        </div>

        <div class="form-group">
          <%= f.check_box :free_preview %>
          <%= f.label :free_preview %>
        </div>

        <div class="actions text-right">
          <%= link_to "Cancelar", subject_resource_path(@lesson.resource.subject, @lesson.resource), class: "btn btn-default" %>
          <%= f.submit class: "btn btn-primary"%>
        </div>


      </div>
    <% end %>
  </div>
</div>
