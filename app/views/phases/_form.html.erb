<div class="container phase-form-page">
  <div class="row">
    <div class="col-sm-12 header">
      <%= link_to root_path do %>
        <span class='glyphicon glyphicon-arrow-left'></span> Volver a todas las fases
      <% end %>
    </div>

    <%= form_for @phase do |f| %>
      <div class="col-sm-10 col-sm-offset-1">
        <%= render 'shared/flash_messages_form', object: @phase %>
        <h1>Editar Fase</h1>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, rows: 2, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :color %>
          <%= f.text_field :color, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.check_box :published %>
          <%= f.label :published %>
        </div>

        <div class="actions text-right">
          <%= link_to "Cancelar", phases_path, class: "btn btn-default" %>
          <%= f.submit class: "btn btn-primary"%>
        </div>
      </div>
    <% end %>
  </div>
</div>
