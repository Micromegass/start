<div class="container course-form-page">
  <div class="row">
    <%= form_for :activate_user, url: activate_users_path(token: @activate_user.token), method: :patch do |f| %>
      <%= f.hidden_field :token %>
      <div class="col-sm-10 col-sm-offset-1">
        <h1>Activar Cuenta</h1>
        <div class="row">
          <div class="col-sm-6">
            <%= render 'shared/flash_messages_form', object: @activate_user %>
            <div class="form-group">
              <%= f.label :email, "Correo Electrónico" %>
              <%= f.text_field :email, class: 'form-control input-lg', placeholder: 'email', disabled: true %>
            </div>

            <div class="form-group">
              <%= f.label :birthday, "Fecha de cumpleaños" %>
              <%= f.date_field(:birthday , class: "form-control input-lg") %>
            </div>
            <div class="form-group">
              <%= f.label :mobile_number, "Celular"%>
              <div class="input-group input-group-lg">
                <span class="input-group-addon" id="basic-addon1">+57</span>
                <%= f.telephone_field :mobile_number, class: 'form-control', placeholder: 'Número de celular' %>
              </div>
              <span>(p.e. 3002111111)</span>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="form-group">
              <%= f.label :nickname %>
              <div class="input-group input-group-lg">
                <span class="input-group-addon" >makeitreal.camp/u/</span>
                <%= f.text_field :nickname, class: 'form-control'%>
              </div>

              <span class="help-block">Nickame se usa para determinar la  URL personalizada, si  por ejemplo la url es www.makeitreal.camp/u/maker,
              ¡simplemente tienes que escribir "maker"!. </span>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 col-md-offset-6">
            <div class="actions text-right">
              <%= f.submit("Activar Cuenta", class: "btn btn-primary") %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
