<div class="row">
  <div class="col-xs-2 col-sm-2 col-md-2">
    <div class="level-image-container">
      <img src = "{{= user.level_image }}" class="img-responsive" />
    </div>
  </div>

  <div class="col-xs-8 col-sm-8 col-md-8">
    {{ if (user.hasOwnProperty('next_level')) { }}
      <p class="points">{{= user.total_points }}/{{= user.required_points }}</p>
    {{ } else { }}
      <p class="points">{{= user.total_points }}/{{= user.total_points }}</p>
    {{ } }}
    <div class="progress">
      <div class="progress-bar progress-bar-success"
        role="progressbar"
        style="width:{{= (user.level_progress*100).toFixed(2) }}%;opacity:0.6;background-color: red">
      </div>
    </div>
  </div>

  {{ if (user.hasOwnProperty("next_level")) { }}
    <div class="col-xs-2 col-sm-2 col-md-2">
      <div class="level-image-container">
        <img src = "{{= user.next_level_image }}" class="img-responsive" />
      </div>
    </div>
  {{ } }}
</div>
