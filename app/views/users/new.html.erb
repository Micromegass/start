        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control input-lg' %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control input-lg' %>
        </div>

        <div class="text-right"><%= f.submit "Â¡Empezar ahora!", class: 'btn btn-primary btn-lg btn-block' %></div>
      <% end %>
    </div>
  </div>
</div>