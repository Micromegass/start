<div class="container course-form-page">
  <div class="row">
    <%= form_for @course do |f| %>
      <div class="col-sm-10 col-sm-offset-1">
        <%= render 'shared/flash_messages_form', object: @course %>
        <h1>Editar Curso</h1>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, rows: 2, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :excerpt %>
          <%= f.text_area :excerpt, rows: 2, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :time_estimate %>
          <%= f.text_field :time_estimate, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :phase %>
          <%= f.collection_select(:phase_id, Phase.all, :id, :name, {},{class: "form-control"}) %>
        </div>

        <div class="form-group">
          <%= f.check_box :published %>
          <%= f.label :published %>
        </div>

        <div class="actions text-right">
          <%= link_to "Cancelar", @course, class: "btn btn-default" %>
          <%= f.submit class: "btn btn-primary"%>
        </div>
      </div>
    <% end %>
  </div>
</div>
