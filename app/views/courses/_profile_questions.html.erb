<div id="questions-modal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <%= form_for current_user, url: activate_user_path(current_user), remote: true do |f| %>
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Ayúdanos a conocerte mejor</h4>
        </div>
        <div class="alert alert-danger option-alert" role="alert" style="display:none;">Selecciona una opción</div>
        <div class="modal-body">
          <div class="part-1">
            <p>Tu primer nombre es</p>
            <div class="form-group">
              <%= f.text_field :first_name, class: "form-control input-lg", autofocus: true %>
            </div>
          </div>

          <div class="part-2 multiple-option" style="display: none;">
            <p>Tu nivel de experiencia programando es:</p>
            <div class="answers">
              <div class="form-group radio-group">
                <%= f.radio_button :experience, "none" %> <%= f.label :experience_none, '<strong>Nula:</strong> este es tu primer acercamiento con la programación.'.html_safe %>
              </div>
              <div class="form-group radio-group">
                <%= f.radio_button :experience, "beginner" %> <%= f.label :experience_beginner, '<strong>Principiante:</strong> ya empezaste de alguna forma por tu cuenta.'.html_safe %>
              </div>
              <div class="form-group radio-group">
                <%= f.radio_button :experience, "intermediate" %> <%= f.label :experience_intermediate, '<strong>Intermedio</strong>.'.html_safe %>
              </div>
              <div class="form-group radio-group">
                <%= f.radio_button :experience, "advanced" %> <%= f.label :experience_advanced, '<strong>Avanzado:</strong> Has tenido experiencia laboral como programador (en cualquier lenguaje).'.html_safe %>
              </div>
            </div>
          </div>

          <div class="part-3 multiple-option" style="display: none;">
            <p class="text-center">¿Con cuál de las siguientes frases te identificas mejor?</p>
            <div class="answers">
              <div class="form-group">
                <%= f.radio_button :mindset, "growth" %> <%= f.label :mindset_growth, 'Puedo aprender cualquier cosa si me lo propongo.' %>
              </div>
              <div class="form-group">
                <%= f.radio_button :mindset, "fixed" %> <%= f.label :mindset_fixed, 'Mi inteligencia y talentos son limitados.' %>
              </div>
            </div>
          </div>

          <div class="part-4 multiple-option" style="display: none;">
            <p>Ante los obstáculos y las dificultades:</p>
            <div class="answers">
              <div class="form-group">
                <%= f.radio_button :optimism, "high" %> <%= f.label :optimism_high, 'Soy optimista y persistente.' %>
              </div>
              <div class="form-group">
                <%= f.radio_button :optimism, "low" %> <%= f.label :optimism_low, 'Me desmotivo fácilmente.' %>
              </div>
            </div>
          </div>

        </div>
        <div class="modal-footer">
          <a href="#" class="btn btn-default back" style="display: none;" tabindex="-1">Atrás</a>
          <button class="btn btn-success next">Siguiente</button>
          <%= f.submit "Finalizar", class: "btn btn-primary finish", style: "display: none;" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  new ProfileQuestionsView();
</script>