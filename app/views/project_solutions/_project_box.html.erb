<%# required: solution %>
<%# optional: hightlighted %>
<% own_solution ||= false %>

<div class="col-xs-12 col-md-4">
  <div class="project-solution-box <%= 'hightlighted' if own_solution %>">
    <div class="media">
      <div class="media-left">
        <img src="<%= Gravatar.new("#{solution.user.email}").image_url %>" class="img-circle" />
      </div>
      <div class="media-body">
        <h4 class="media-heading">Solución de <%= solution.user.first_name %></h4>
        <p>
          <%= markdown truncate(solution.summary) %>
        </p>
        <% if own_solution %>
          <span class="label label-info">Mi solución</span><br/>
        <% end %>
        <div class="links">
          <%= link_to "https://github.com/#{solution.repository}", class: "link" do %>
            <i class="fa fa-github"></i>
            <%= solution.repository %>
          <% end %>
          <br>
          <% unless solution.url.blank? %>
            <%= link_to solution.url, class: "link" do %>
              <i class="fa fa-globe"></i>
              <%= solution.url %>
            <% end %>
          <% end %>
        </div>
        <%= link_to subject_project_project_solution_path(solution.project.subject, solution.project, solution), class: "btn btn-primary btn-comment" do %>
          Ver
          <span class="glyphicon glyphicon-chevron-right"></span>
        <% end %>
      </div>
    </div>
  </div>
</div>
