var form = $(".comment-form");
<% if @comment.valid? %>
  $('.comments').prepend('<%= j render("/comments/comment", comment: @comment) %>');
  $('#comment-input').val('');
  form.find('.label-danger').hide();
  form.find('#comment-input').removeAttr('style');
<% else %>
  form.find('.label-danger').show();
  form.find('#comment-input').css("border", "1px solid red");
<% end %>