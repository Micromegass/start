<article class="discussion-entry">
  <div class="discussion-entry-inner">
    <div class="discussion-label">
      <div class="comment-body">
        <% if @comment.blank? %>
          <p></p>
        <% else %>
          <p><%= markdown(@comment,filter_html: true, escape_html: true) %></p>
        <% end %>
      </div>
    </div>
  </div>
</article>
