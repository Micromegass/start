<% if @reset_request.valid? %>
  $('#change-password-modal .alerts-container').html(
    '<%= j render "shared/alert", msg: "Se ha enviado un correo electrónico con las instrucciones para restablecer la contraseña.", type: "notice" %>'
  );
  $('#change-password-modal input[type=email]').val('');
<% else %>
  $('#change-password-modal .alerts-container').html(
    '<%= j render "shared/flash_messages_form", object: @reset_request %>'
  )

<% end %>
