<div class="container login">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>Ingresar</h1>
      <%= form_tag controller: :sessions, action: :create do %>
        <div class="form-group">
          <%= label_tag(:email, "Email") %>
          <%= email_field_tag(:email, nil, class: 'form-control input-lg') %>
        </div>
        <div class="form-group">
          <%= label_tag(:password, "Password") %>
          <%= password_field_tag(:password, nil, class: 'form-control input-lg') %>
        </div>
        <div class="text-right"><%= submit_tag("Ingresar", class: 'btn btn-primary btn-lg btn-block') %></div>

        <div class="form-group btn-social">
          <%= link_to '<i class="fa fa-github"></i> Ingresa con Github'. html_safe, '/auth/github', class: "btn btn-default", id: "sign-in-github" %>
          <%= link_to '<i class="fa fa-facebook-square"></i> Ingresa con Facebook'.html_safe, '/auth/facebook', class: "btn btn-info", id: "sign-in-facebook" %>
        </div>

        <div class="options text-right">
          <div class="option"><%= link_to "He olvidado mi contraseña", new_password_reset_path, remote: true %></div>
          <div class="option"><%= link_to "Aún no tengo una cuenta", signup_path %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
